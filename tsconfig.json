{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "exclude": [
    "dist/**/*",
    "src/test/integration/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
